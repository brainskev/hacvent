# Environment Variables Template
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Google Maps (for location services)
NEXT_PUBLIC_GOOGLE_MAPS_KEY=

# Cloudinary Configuration (for document uploads)
# Get these from: https://cloudinary.com/console/settings/api-keys
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Clerk Authentication
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/customer-intake
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/customer-intake

# Database
DATABASE_URL=

# Authentication (Legacy - kept for reference)
JWT_SECRET=
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Email Service (for notifications)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# File Upload (AWS S3 or similar)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# Payment Processing (Stripe for contractor certification)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
